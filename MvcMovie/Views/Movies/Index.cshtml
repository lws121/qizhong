
@model MvcMovie.Models.MovieGenderViewModel
@{
    ViewData["Title"] = "学生信息";
}

<h1>学生信息</h1>

<p>
    <a asp-action="Create">添加</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>

        <select asp-for="movieGender" asp-items="Model.Genders">
            <option value="">All</option>
        </select>

        姓名: <input type="text" asp-for="SearchString" />
        <input type="submit" value="查询" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Temperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movies) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">修改</a> |
                <a asp-action="Details" asp-route-id="@item.Id">详情</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
